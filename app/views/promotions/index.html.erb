<%= link_to 'Voltar', root_path %>
<%= link_to 'Registrar uma promoção', new_promotion_path %>
<%= form_with url: search_promotions_path do |f| %>
<%= f.label :query, 'Busca' %>
<%= f.text_field :query %>
<%= f.submit 'Busca'%>
<% end %>
<% if @promotions.empty?%>
  <h3> Nenhuma promoção cadastrada</h3>
<% end %>
<% @promotions.each do |promotion| %>
  <h3>
    <%= link_to promotion.name, promotion %>
  </h3>
  <dl>
    <dt>Descrição</dt>
    <dd><%= promotion.description %></dd>
    <dt>Desconto</dt>
    <dd><%= number_to_percentage(promotion.discount_rate, separator: ',', precision: 2 ) %></dd>
    <dt><%= link_to 'Apagar', promotion, method: :delete %></dt>
  </dl>
<% end %>
