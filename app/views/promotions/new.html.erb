<h1>Registrar uma promoção </h1>
<% if @promotion.errors.any? %>
  <h4>Encontramos erro, promoção não foi salva</h4>
  <ul>
    <% @promotion.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @promotion, local: true do |form|%>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name%>
  </div>
  <div>
    <%= form.label :description %>
    <%= form.text_field :description%>
  </div>
  <div>
    <%= form.label :code %>
    <%= form.text_field :code%>
  </div>
  <div>
    <%= form.label :discount_rate %>
    <%= form.number_field :discount_rate, in: 10..90, step: 5 %>
  </div>
  <div>
    <%= form.label :coupon_quantity %>
    <%= form.number_field :coupon_quantity%>
  </div>
  <div>
    <%= form.label :expiration_date %>
    <%= form.text_field :expiration_date %>
  </div>
  <%= form.submit %>
<% end %>
